<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage,ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_action_bar_bg"
    android:orientation="vertical">

    <include layout="@layout/common_action_bar"/>

    <ImageView
        android:id="@+id/iv_about_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_about_logo" />

    <TextView
        android:id="@+id/tv_about_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_about_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="28dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_about_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/about_item_selector"
            android:drawableLeft="@drawable/ic_about_update"
            android:drawableStart="@drawable/ic_about_update"
            android:drawablePadding="9dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about_check_update"
            android:textSize="16dp"
            android:textColor="#888888"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"/>

        <TextView
            android:id="@+id/tv_about_rate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/about_item_selector"
            android:drawableLeft="@drawable/ic_about_rate"
            android:drawableStart="@drawable/ic_about_rate"
            android:drawablePadding="9dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about_rate"
            android:textSize="16dp"
            android:textColor="#888888"/>

        <TextView
            android:id="@+id/tv_about_policy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/about_item_selector"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about_policy"
            android:textSize="16dp"
            android:textColor="#888888"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"/>
        
        <TextView
            android:id="@+id/tv_about_user_experience"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/about_item_selector"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about_user_experience_program"
            android:textSize="16dp"
            android:textColor="#888888"/>

    </LinearLayout>
</LinearLayout>