<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage,ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_status_bar_green"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_common_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/action_bar_back_drawable_selector"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/action_bar_back_drawable_selector"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/drawer_help"
        android:textColor="@color/white"
        android:textSize="@dimen/h3_16"/>

    <ImageView
        android:id="@+id/iv_about_logo"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_about_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:textSize="@dimen/h3_16" />

    <TextView
        android:id="@+id/tv_about_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="95dp"
        android:textColor="@color/white_70"
        tools:text="@string/about_app_version"
        android:textSize="@dimen/h5_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_about_contact_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/about_item_selector"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about_contact_us"
            android:textSize="@dimen/h5_12"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_about_arrow"
            android:textColor="@color/black_70"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/list_divider_line_color_e7e9f3"/>

        <TextView
            android:id="@+id/tv_about_policy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/about_item_selector"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about_policy"
            android:textSize="@dimen/h5_12"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_about_arrow"
            android:textColor="@color/black_70"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/list_divider_line_color_e7e9f3"/>
        
        <TextView
            android:id="@+id/tv_about_user_experience"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/about_item_selector"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawableRight="@drawable/ic_about_arrow"
            android:text="@string/about_user_experience_program"
            android:textSize="@dimen/h5_12"
            android:textStyle="bold"
            android:textColor="@color/black_70"/>

    </LinearLayout>
</LinearLayout>