<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/list_divider_line_color_f5f6ff"
    android:orientation="vertical"
    tools:context="com.jb.filemanager.function.apkmanager.AppManagerActivity">



        <include layout="@layout/common_action_bar_without_search_blue_back_2"/>

        <com.jb.filemanager.ui.widget.FloatingGroupExpandableListView
            android:id="@+id/elv_apk"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:groupIndicator="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none">

        </com.jb.filemanager.ui.widget.FloatingGroupExpandableListView>

    <TextView
        android:id="@+id/tv_bottom_delete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableTop="@drawable/ic_bottom_delete"
        android:background="@drawable/app_uninstall_item_selector"
        android:text="@string/app_uninstall"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:visibility="visible"/>

</LinearLayout>
