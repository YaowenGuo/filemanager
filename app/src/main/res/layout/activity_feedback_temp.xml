<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_status_bar_bg"
                android:clipToPadding="true"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                tools:ignore="SpUsage,ContentDescription">

    <RelativeLayout
        android:id="@+id/activity_feedback_title_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF44D6C3">

        <TextView
            android:id="@+id/tv_common_action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/action_bar_back_drawable_selector"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/action_bar_back_drawable_selector"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/drawer_help"
            android:textColor="@color/white"
            android:textSize="@dimen/h3_16"/>

        <ImageView
            android:id="@+id/iv_common_action_bar_send"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_marginRight="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_feedback_send"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_feedback_title_ll"
        android:background="#f5f6ff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_menu_feedback_tip_layout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/activity_menu_feedback_tip_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/feedback_tip_content"
                    android:textColor="@color/black_70"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/activity_menu_feedback_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="23dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/feedback_tip_no"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/h3_16"/>

                <TextView
                    android:id="@+id/activity_menu_feedback_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="23dp"
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@id/activity_menu_feedback_close"
                    android:layout_toStartOf="@id/activity_menu_feedback_close"
                    android:text="@string/feedback_tip_send_report"
                    android:textColor="#FFFF7A7A"
                    android:textSize="@dimen/h3_16"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E7E9F3"/>

            <LinearLayout
                android:id="@+id/setting_feedback_menu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setting_feedback_menu_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/h3_16"/>

                <ImageView
                    android:id="@+id/menu_imageview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_feedback_arrow"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E7E9F3"/>

            <EditText
                android:id="@+id/container_setting_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="top"
                android:hint="@string/feedback_container_hint"
                android:minHeight="140dp"
                android:paddingBottom="17dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="17dp"
                android:textColor="@color/black_70"
                android:textColorHint="@color/black_20"
                android:textCursorDrawable="@drawable/common_action_bar_search_cursor"
                android:textSize="@dimen/h4_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E7E9F3"/>
            <!--
                tools:text="输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字输入了一堆文字"-->

            <TextView
                android:id="@+id/notice_setting_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:text="@string/feedback_notice"
                android:textColor="@color/black_40"
                android:textSize="@dimen/h5_12"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textSize="@dimen/h5_12"
                android:textColor="@color/black_40"
                android:text="@string/feedback_title_common_problem"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <LinearLayout
                    android:id="@+id/activity_menu_feedback_virus_install_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_virus_install"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17dp"
                        android:drawablePadding="17dp"
                        android:layout_weight="1"
                        android:text="@string/feedback_problem_virus_install"/>

                    <View
                        android:id="@+id/activity_menu_feedback_virus_install_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/arrow_up"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:rotation="180"/>
                    
                </LinearLayout>

                <TextView
                    android:id="@+id/activity_menu_feedback_virus_install_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/white"
                    android:textColor="@color/black_40"
                    android:visibility="gone"
                    android:text="@string/feedback_details_virus_install"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E7E9F3"/>
                
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/activity_menu_feedback_tricking_ad_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_tricking_ad"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17dp"
                        android:drawablePadding="17dp"
                        android:layout_weight="1"
                        android:text="@string/feedback_problem_tricking_ad"/>

                    <View
                        android:id="@+id/activity_menu_feedback_tricking_ad_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/arrow_up"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:rotation="180"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_menu_feedback_tricking_ad_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black_40"
                    android:paddingRight="16dp"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:text="@string/feedback_details_tricking_ad"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E7E9F3"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_shadow_height"
        android:layout_below="@id/activity_feedback_title_ll"
        android:background="@drawable/main_shadow"/>

</RelativeLayout>