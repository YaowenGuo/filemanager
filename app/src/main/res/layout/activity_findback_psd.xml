<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_findback_psd_root_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        layout="@layout/common_applock_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="@string/applock_psd_set_step_3"
            android:textColor="#44D6C3"
            android:textSize="@dimen/h3_16"/>

        <TextView
            android:id="@+id/activity_findback_psd_question_show"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:textColor="#B2000000"
            android:textSize="@dimen/h4_14"
            tools:text="applock"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#E7E9F3"/>

        <EditText
            android:id="@+id/activity_findback_psd_question_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="@string/applock_psd_answer_question_edit_hint"
            android:maxLength="15"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:textColor="#B2000000"
            android:textColorHint="#3F000000"
            android:textSize="@dimen/h4_14"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#E7E9F3"/>

        <TextView
            android:id="@+id/activity_findback_psd_bottom_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/shape_btu_bg"
            android:gravity="center"
            android:text="@string/common_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/h3_16"/>

    </LinearLayout>

</LinearLayout>