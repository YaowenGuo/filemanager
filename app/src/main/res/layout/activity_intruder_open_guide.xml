<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intruder_open_guide_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_intruder_open_guide_cover_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <LinearLayout
        android:id="@+id/activity_intruder_open_guide_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/ic_about_logo"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/activity_intruder_open_guide_dialog_top_bg"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_about_logo"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="102dp"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal|bottom"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="128dp"
                    android:background="#ffffff" />

                <FrameLayout
                    android:layout_width="92dp"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/activity_intruder_open_guide_dialog_head"
                            android:layout_width="88dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_about_logo"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/activity_intruder_open_guide_dialog_body"
                            android:layout_width="50dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_about_logo"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="14dp"
                        android:textColor="@android:color/black"
                        android:text="001"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:padding="0dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="5dp"/>

                </FrameLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="128dp"
                    android:background="#ffffff" />

            </LinearLayout>


        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="18dp"
            android:text="@string/intruder_shot_info_title"
            android:textColor="#3c3c3c"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/activity_intruder_open_guide_intruder_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/intruder_shot_info_desc"
            android:textColor="#808080"
            android:gravity="center_horizontal"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/activity_intruder_open_guide_btn"
            android:layout_width="167dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="23dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/applock_common_ok"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>