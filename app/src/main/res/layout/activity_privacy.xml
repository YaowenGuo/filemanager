<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9f9f9"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_marginTop="30dp"
        android:text="@string/app_name"
        android:textColor="#444444"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="1.0.1"
        android:textColor="#888888"
        android:textSize="16sp"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/declaration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/about_copyright"
        android:textColor="#FF9A9A9A"
        android:textSize="10dp"
        android:visibility="invisible"
        tools:visibility="visible"
         />

    <LinearLayout
        android:id="@+id/join_uep_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/declaration"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        tools:visibility="visible">

        <CheckBox
            android:id="@+id/join_uep_cb"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/privacy_checkbox_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/join_uep_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/private_join_uep"
            android:textColor="#FF9A9A9A"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/private_policy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/join_uep_container"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:text="@string/privacy_start_by_agree_policy"
        android:textColor="#FF9A9A9A"
        android:textSize="12sp"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/start_btn"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_above="@id/private_policy_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/privacy_button_selector"
        android:gravity="center"
        android:text="@string/private_start"
        tools:visibility="visible"
        android:textColor="@drawable/privacy_button_text_selector"
        android:textSize="17sp"
        android:visibility="invisible"/>

</RelativeLayout>