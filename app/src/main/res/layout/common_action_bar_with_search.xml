<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_common_action_bar_with_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/action_bar_back_drawable_selector"
        android:drawableStart="@drawable/action_bar_back_drawable_selector"
        android:text="@string/common_action_bar_title"
        android:textColor="@drawable/action_bar_back_text_selector"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/et_common_action_bar_with_search_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="18dp"
        android:inputType="text"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_common_action_bar_with_search_search"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_bar_search"/>

</LinearLayout>