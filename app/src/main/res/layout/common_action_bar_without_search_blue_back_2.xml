<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:background="@color/colorAccent">

    <TextView
        android:id="@+id/tv_common_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/action_bar_back_drawable_selector_blue"
        android:drawablePadding="17dp"
        android:drawableStart="@drawable/action_bar_back_drawable_selector_blue"
        android:gravity="center"
        android:paddingLeft="17dp"
        android:text="@string/clean_storage"
        android:textColor="@drawable/action_bar_back_text_selector_black"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/iv_common_action_bar_search"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/black_search_icon_selector"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_shadow"/>
</RelativeLayout>