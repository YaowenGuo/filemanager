<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rate_top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/guide_dialog_title"
            android:textColor="@color/white"
            android:textSize="@dimen/h1_20"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_smart_charge_iphone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rate_bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/drawer_smart_charge"
            android:textColor="@color/black_70"
            android:textSize="@dimen/h1_20"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/guide_dialog_smart_charge_tip"
                android:textColor="@color/black_70"
                android:textSize="@dimen/h4_14"/>

            <ImageView
                android:id="@+id/dialog_introduce_charge_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/drawer_setting_switcher_selector"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="@color/common_bg"/>

        <TextView
            android:id="@+id/dialog_introduce_charge_ok"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/common_item_bottom_round_selector"
            android:gravity="center"
            android:text="@string/common_ok"
            android:textColor="@color/common_style_green"
            android:textSize="@dimen/h3_16"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>