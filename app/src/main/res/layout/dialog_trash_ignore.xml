<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:minHeight="240dp"
    android:background="@drawable/bg_dialog_backup"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_trash_ignore_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ad"
        android:layout_marginStart="29dp"/>

    <TextView
        android:id="@+id/dialog_trash_ignore_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/add_to_ignore_list"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_trash_ignore_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/dialog_trash_ignore_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_trash_ignore_icon"/>

    <TextView
        android:id="@+id/dialog_trash_ignore_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textColor="#666666"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_trash_ignore_icon"
        app:layout_constraintTop_toBottomOf="@+id/dialog_trash_ignore_icon"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/dialog_trash_ignore_cancel_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="@string/common_cancel"
        android:textAlignment="center"
        android:textColor="#999999"
        android:background="@drawable/bg_item_detail_btn_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView7"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="180dp"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/dialog_trash_ignore_confirm_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:background="@drawable/bg_item_detail_btn_selector"
        android:text="@string/add_to_ignore_list"
        android:textAlignment="center"
        android:textColor="#0083ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="8dp"
        android:background="#cccccc"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="180dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="0dp"/>

    <View
        android:id="@+id/textView7"
        android:layout_width="1px"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:background="#cccccc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_trash_ignore_cancel_btn"
        app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>