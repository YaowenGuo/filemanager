<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_verify_select_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="#ff444444"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        tools:text="Spy Detect Help" />

    <View
        android:id="@+id/dialog_verify_select_title_spliter"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#cccccc"
        android:layout_below="@id/dialog_verify_select_title"/>

    <FrameLayout
        android:id="@+id/dialog_verify_select_middle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/dialog_verify_select_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:textColor="#4FAAFF"
                android:textSize="16sp"
                android:gravity="center"
                tools:text="Cancel"/>

            <TextView
                android:id="@+id/dialog_verify_select_operate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                tools:text="Cancel"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_verify_select_verify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:textColor="#000000"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            tools:text="Get It"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/dialog_verify_select_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_verify_select_title_spliter"
        android:layout_above="@id/dialog_verify_select_middle_view"/>

</RelativeLayout>