<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:clickable="true"
              android:background="#000000">

    <!-- Title -->
    <RelativeLayout
        android:id="@+id/fragment_image_details_title_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_image_details_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="16dp"
            android:src="@drawable/ic_about_logo"/>

        <TextView
            android:id="@+id/fragment_image_details_tip_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fragment_image_details_icon"
            android:text="Image Details"
            android:textColor="@android:color/white"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/fragment_image_details_set_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="设置壁纸"
            android:layout_marginRight="16dp"
            tools:ignore="ContentDescription"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_image_details_view_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>