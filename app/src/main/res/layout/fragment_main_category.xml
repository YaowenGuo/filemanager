<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_main_category_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_photo"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_photo"/>

                <TextView
                    android:id="@+id/tv_main_category_photo_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>

        </FrameLayout>


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/fl_main_category_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_video"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_video"/>

                <TextView
                    android:id="@+id/tv_main_category_video_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>

        </FrameLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/fl_main_category_app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_app"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_apps"/>

                <TextView
                    android:id="@+id/tv_main_category_app_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_main_category_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_music"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_music"/>

                <TextView
                    android:id="@+id/tv_main_category_music_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>

        </FrameLayout>


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/fl_main_category_doc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_doc"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_doc"/>

                <TextView
                    android:id="@+id/tv_main_category_doc_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>

        </FrameLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/fl_main_category_zip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_zip"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_zip"/>

                <TextView
                    android:id="@+id/tv_main_category_zip_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_main_category_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_download"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_download"/>

                <TextView
                    android:id="@+id/tv_main_category_download_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>

        </FrameLayout>


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/fl_main_category_recent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_recent"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_recent"/>

                <TextView
                    android:id="@+id/tv_main_category_recent_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/fl_main_category_ad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_category_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main_category_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/ic_main_category_ad"
                    android:textColor="@color/black_70"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/main_category_item_ad"/>

                <TextView
                    android:id="@+id/tv_main_category_ad_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textColor="@color/black_40"
                    android:textSize="10dp"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_main_category_info_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_main_phone"
                android:drawableStart="@drawable/ic_main_phone"
                android:textColor="@color/black_70"
                android:textSize="10dp"
                android:text="@string/main_info_phone_storage"/>

            <TextView
                android:id="@+id/tv_main_category_info_storage_used"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#66000000"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/tv_main_category_info_storage_unused"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#66000000"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="10dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/ll_main_category_phone_sdcard_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/main_category_info_switch_track">

                <TextView
                    android:id="@+id/tv_main_category_info_switch_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/main_category_info_switch_thumb_selector"
                    android:textSize="8dp"
                    android:textColor="@color/main_category_info_switch_text_color_selector"
                    android:text="@string/main_info_switch_phone"/>

                <TextView
                    android:id="@+id/tv_main_category_info_switch_sdcard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/main_category_info_switch_thumb_selector"
                    android:textSize="8dp"
                    android:textColor="@color/main_category_info_switch_text_color_selector"
                    android:text="@string/main_info_switch_sdcard"/>

            </LinearLayout>

        </LinearLayout>

        <com.jb.filemanager.ui.view.UsageAnalysis
            android:id="@+id/ua_main_category_info_usage_analysis"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_main_category_info_usage_analysis"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_main_category_info_photo"
                android:drawableStart="@drawable/ic_main_category_info_photo"
                android:drawablePadding="4dp"
                android:textColor="#66000000"
                android:textSize="12dp"
                android:text="@string/main_info_photo"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_main_category_info_music"
                android:drawableStart="@drawable/ic_main_category_info_music"
                android:drawablePadding="4dp"
                android:textColor="#66000000"
                android:textSize="12dp"
                android:text="@string/main_info_music"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_main_category_info_video"
                android:drawableStart="@drawable/ic_main_category_info_video"
                android:drawablePadding="4dp"
                android:textColor="#66000000"
                android:textSize="12dp"
                android:text="@string/main_info_video"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_main_category_info_docs"
                android:drawableStart="@drawable/ic_main_category_info_docs"
                android:drawablePadding="4dp"
                android:textColor="#66000000"
                android:textSize="12dp"
                android:text="@string/main_info_docs"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_main_category_info_apps"
                android:drawableStart="@drawable/ic_main_category_info_apps"
                android:drawablePadding="4dp"
                android:textColor="#66000000"
                android:textSize="12dp"
                android:text="@string/main_info_apps"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_main_category_info_other"
                android:drawableStart="@drawable/ic_main_category_info_other"
                android:drawablePadding="4dp"
                android:textColor="#66000000"
                android:textSize="12dp"
                android:text="@string/main_info_other"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_category_clear_trash"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:paddingBottom="3dp"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="@string/home_button_clean"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_main_category_clear_trash_selector"/>

</LinearLayout>