<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_search_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0000FF"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fragment_search_title_search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="18dp"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:visibility="visible">

            <requestFocus/>
        </EditText>

        <ImageView
            android:id="@+id/fragment_search_title_search_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_bar_search"/>

    </RelativeLayout>

    <View
        android:id="@+id/fragment_search_transparent_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_search_titlelayout"
        android:background="#7f000000"/>

    <!--中间有一个加载动画-->

</RelativeLayout>