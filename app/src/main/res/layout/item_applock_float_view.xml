<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white">

    <RelativeLayout
        android:id="@+id/item_applock_float_view_content"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <ImageView
            android:id="@+id/item_applock_float_view_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/sym_def_app_icon"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/item_applock_float_view_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/item_applock_float_view_icon"
            android:textColor="#B2000000"
            android:textSize="@dimen/h5_12"
            android:textStyle="bold"
            tools:text="@string/app_name"/>

        <com.jb.filemanager.commomview.GroupSelectBox
            android:id="@+id/item_applock_float_view_selectbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="16dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/item_applock_float_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="68dp"
        android:background="#f5f6ff"/>

</LinearLayout>