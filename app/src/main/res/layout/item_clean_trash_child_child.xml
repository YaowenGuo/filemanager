<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/item_child_child_root"
                android:background="#e8e8e8"
                android:minHeight="60dp">

    <ImageView
        android:id="@+id/item_child_child_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/item_child_child_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:textColor="#666666"
        android:ellipsize="middle"
        android:ems="10"
        android:singleLine="true"
        android:textSize="16dp"/>

    <com.jb.filemanager.function.trash.adapter.ItemCheckBox
        android:id="@+id/item_child_child_select_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="18dp"
        android:src="@drawable/choose_part"/>

    <TextView
        android:id="@+id/item_child_child_size_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#999999"
        android:layout_marginRight="50dp"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/item_child_child_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_child_child_size_unit"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:textColor="#666666"
        android:textSize="16dp"/>
</RelativeLayout>