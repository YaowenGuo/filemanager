<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_duplicate_child_root"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <include
        android:id="@+id/layout_gallery_child_item_0"
        layout="@layout/layout_gallery_child_content_item"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <include
        android:id="@+id/layout_gallery_child_item_1"
        layout="@layout/layout_gallery_child_content_item"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <include
        android:id="@+id/layout_gallery_child_item_2"
        layout="@layout/layout_gallery_child_content_item"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

</LinearLayout>