<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/num_point_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_num_lock"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/num_point_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_num_lock"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/num_point_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_num_lock"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/num_point_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_num_lock"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_1"
                style="@style/lock_num_style"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                android:text="1" />

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_4"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                style="@style/lock_num_style"
                android:text="4" />

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_7"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                style="@style/lock_num_style"
                android:text="7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_2"
                style="@style/lock_num_style"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                android:text="2" />

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_5"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                style="@style/lock_num_style"
                android:text="5" />


            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_8"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                style="@style/lock_num_style"
                android:text="8" />

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_0"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                style="@style/lock_num_style"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_3"
                style="@style/lock_num_style"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                android:layout_gravity="center_horizontal"
                android:text="3" />

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_6"
                style="@style/lock_num_style"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                android:layout_gravity="center_horizontal"
                android:text="6" />

            <com.swift.boost.function.applock.view.RippleView
                android:id="@+id/number_9"
                style="@style/lock_num_style"
                ripple:alphaFactor = "0.7"
                ripple:rippleColor="#7FCCCCCC"
                ripple:hover="true"
                android:layout_gravity="center_horizontal"
                android:text="9" />

            <ImageView
                android:id="@+id/number_del"
                style="@style/lock_num_style"
                android:paddingTop="17.5dp"
                android:paddingBottom="17.5dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_about_logo"
                tools:ignore="ContentDescription" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>