<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage,ContentDescription"
    android:id="@+id/left_drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:paddingTop="@dimen/drawer_sv_margin_top_42dp"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_for_drawer_item"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingBottom="40dp"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:id="@+id/rl_drawer_bottom"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:background="@drawable/img_drawer_bottom_bg_blue">

        <ImageView
            android:id="@+id/iv_drawer_setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/ic_drawer_setting" />

        <ImageView
            android:id="@+id/iv_drawer_bottom_logo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/img_drawer_button_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toRightOf="@id/iv_drawer_setting"
            android:layout_toEndOf="@id/iv_drawer_setting"
            android:layout_toLeftOf="@id/iv_drawer_bottom_logo"
            android:layout_toStartOf="@id/iv_drawer_bottom_logo"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>