<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage"
    android:layout_width="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="80dp"
    android:background="@drawable/bg_popup_window"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_main_action_more_new_folder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/popup_action_bar_more_new_folder"
        android:textColor="@color/popup_window_item_text_color"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_main_action_more_sort_by"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/popup_action_bar_more_sort_by"
        android:textColor="@color/popup_window_item_text_color"
        android:textSize="14dp" />

</LinearLayout>