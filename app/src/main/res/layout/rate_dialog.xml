<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rate_dialog_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rate_top">

        <TextView
            android:id="@+id/rate_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="21dp"
            android:textColor="@color/white"
            android:textSize="@dimen/h1_20"
            android:textStyle="bold"
            tools:text="Cheers!"/>

        <RelativeLayout
            android:id="@+id/rate_dialog_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="100dp"
            android:layout_below="@+id/rate_dialog_title"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rate_dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/rate_dialog_top"
        android:background="@drawable/shape_rate_bottom">

        <TextView
            android:id="@+id/rate_dialog_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_20"
            android:textSize="@dimen/h5_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:text="@string/googleplay_dialog_thanks_btn"/>

    </RelativeLayout>

    <View
        android:id="@+id/rate_dialog_btu_bg"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/rate_dialog_bottom"
        android:background="@drawable/ic_rate_btu"/>

    <TextView
        android:id="@+id/rate_dialog_yes"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/h1_20"
        android:layout_alignBottom="@id/rate_dialog_bottom"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="22dp"
        android:textColor="@color/white"
        tools:text="@string/common_ok"/>

</RelativeLayout>