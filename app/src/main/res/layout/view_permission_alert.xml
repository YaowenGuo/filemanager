<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_permission_alarm_dialog_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rl_permission_alarm_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@color/white"
        tools:background="@color/colorAccent">

        <TextView
            android:id="@+id/tv_permission_alarm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/permission_alarm_dialog_title_lv1_lv2"
            android:textColor="#666666"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_permission_alarm_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="@string/permission_alarm_dialog_content_lv1"
            android:textColor="#666666"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_permission_alarm_details"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/permission_dialog_dital_txt_tip"
            android:textColor="#4FAAFF"
            android:textSize="14sp"/>

        <FrameLayout
            android:id="@+id/fl_permission_alarm_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_permission_alarm_dialog_content"
            android:visibility="gone">
        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_permission_alarm_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/common_default_app_icon"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/iv_permission_alarm_icon"
        android:layout_alignRight="@id/iv_permission_alarm_icon"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher"/>


    <ImageView
        android:id="@+id/view_permission_alert_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_about_logo"/>

    <!-- android:src="@drawable/fire_wall_close"-->


    <ImageView
        android:id="@+id/view_permission_alert_setting"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="44dp"
        android:layout_toLeftOf="@id/view_permission_alert_close"
        android:src="@drawable/ic_about_logo"/>

    <!--android:src="@drawable/day_report_setting"-->

    <TextView
        android:id="@+id/dialog_stop_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="44dp"
        android:layout_toLeftOf="@id/view_permission_alert_close"
        android:background="@color/white"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/ic_about_logo"
        android:gravity="center"
        android:text="@string/common_stop"
        android:textColor="#FC6F5B"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- android:drawableRight="@drawable/day_report_stop"-->

</RelativeLayout>
