<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:text="@string/app_name"
        android:textColor="@color/black_20"
        android:textSize="@dimen/h5_12"/>

    <ImageView
        android:id="@+id/view_tip_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_usb_tip"/>

    <TextView
        android:id="@+id/view_tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="@string/app_name"
        android:textColor="@color/black_70"
        android:textSize="@dimen/h3_16"
        tools:text="USB Has Already Connected"/>

    <ImageView
        android:id="@+id/view_tip_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close"/>

    <ImageView
        android:id="@+id/view_tip_setting"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_toLeftOf="@id/view_tip_close"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_setting"/>

    <FrameLayout
        android:id="@+id/dialog_stop_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_tip_setting"
        android:layout_alignRight="@id/view_tip_setting"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@drawable/bg_popup_window">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="@color/black_70"
            android:textSize="@dimen/h4_14"
            android:text="@string/common_stop"/>

    </FrameLayout>


    <TextView
        android:id="@+id/view_tip_btu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/view_tip_txt"
        android:layout_marginTop="22dp"
        android:background="@drawable/tip_btu_shape"
        android:gravity="center"
        android:textColor="#FF39BDAC"
        android:textSize="@dimen/h3_16"
        android:textStyle="bold"
        tools:text="Manage Your Files"/>
</RelativeLayout>